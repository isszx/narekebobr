---
import { CONTACTS } from '../config';
---

<div class="contacts" id="contacts">
    {CONTACTS.map(({ Icon, link, title, text }) => (
        <a class="contacts__item" href={link} title={title} target="_blank">
            <Icon />
            <span>{text}</span>
        </a>
    ))}
</div>

<style>
.contacts {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 38px;
    margin-bottom: 38px;
}

.contacts__item {
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    user-select: none;
    color: var(--color-text-pharagraph);
    font-family: var(--font-family);
    font-style: normal;
    font-weight: 700;
    font-size: 18px;
    line-height: 20px;
    margin: 12px 25px;
    text-decoration: none;
}
.contacts__item:hover {
    color: var(--color-primary);
}

.contacts__item svg {
    cursor: pointer;
    user-select: none;
    margin-right: 10px;
    background-color: var(--icon-background);
    border-radius: 8px;
}
@media (max-width: 768px) {
    .contacts {
        margin-top: 10px;
        margin-bottom: 20px;
    }

    .contacts__item svg {
        margin-right: 0;
    }
    .contacts__item {
        margin: 10px;
    }
    .contacts span {
        display: none;
    }
}
</style>
